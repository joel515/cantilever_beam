<%= form_for(@beam) do |f| %>
  <%= render 'shared/error_messages' %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :length %>
  <%= f.number_field :length, class: 'form-control', step: 'any' %>

  <%= f.label :width %>
  <%= f.number_field :width, class: 'form-control', step: 'any' %>

  <%= f.label :height %>
  <%= f.number_field :height, class: 'form-control', step: 'any' %>

  <%= f.label :meshsize %>
  <%= f.number_field :meshsize, class: 'form-control', step: 'any' %>

  <%= f.label :material %>
  <%= f.text_field :material, class: 'form-control' %>

  <%= f.label :modulus %>
  <%= f.number_field :modulus, class: 'form-control', step: 'any' %>

  <%= f.label :poisson %>
  <%= f.number_field :poisson, class: 'form-control', step: 'any' %>

  <%= f.label :density %>
  <%= f.number_field :density, class: 'form-control', step: 'any' %>

  <%= f.label :load %>
  <%= f.number_field :load, class: 'form-control', step: 'any' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
