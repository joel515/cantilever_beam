<div class="panel panel-default">
  <div class="panel-heading">
    <strong>Simulation Statistics</strong>
  </div>
  <table class="table">
    <tbody>
      <tr>
        <td>Solver</td>
        <td><%= @beam.job.config.capitalize %></td>
      </tr>
      <% @beam.job.stats.each do |key,value| %>
        <tr>
          <td><%= key %></td>
          <% if value.nil? %>
            <td>N/A</td>
          <% else %>
            <td><%= value %></td>
          <% end %>
        <tr>
      <% end %>
    </tbody>
  </table>
</div>
