<% if text.nil? %>
<td><%= object.to_s.capitalize %></td>
<% else %>
<td><%= text %></td>
<% end %>
<td><%= form.text_field object, class: 'form-control' %></td>
<td>
  <%= form.select (object.to_s<<"_unit").to_sym,
                  constant.map { |k,v| [v[:text], k.to_s] },
                  {},
                  { class: "form-control blue-select" } %>
</td>
