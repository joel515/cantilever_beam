<% provide(:title, @beam.name) %>
<h1><%= status_label(@beam, text: @beam.name) %></h1>
<div class="row">
  <div class="col-md-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <strong>Dimensions</strong>
      </div>
      <table class="table">
        <tbody>
          <tr>
            <td>Length</td>
            <td><%= number_with_units(@beam,
                                      :length) %></td>
          </tr>
          <tr>
            <td>Width</td>
            <td><%= number_with_units(@beam,
                                      :width) %></td>
          </tr>
          <tr>
            <td>Height</td>
            <td><%= number_with_units(@beam,
                                      :height) %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <strong>Boundary Conditions</strong>
      </div>
      <table class="table">
        <tbody>
          <tr>
            <td>Load</td>
            <td><%= number_with_units(@beam,
                                      :load) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <strong>Material Properties</strong>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Elastic Modulus (<%= @beam.unit_text(:modulus) %>)</th>
            <th>Poisson's Ratio</th>
            <th>Density (<%= @beam.unit_text(:density) %>)</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @beam.material %></td>
            <td><%= @beam.modulus %></td>
            <td><%= @beam.poisson %></td>
            <td><%= @beam.density %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <strong>Mesh Properties</strong>
      </div>
      <table class="table">
        <tbody>
          <tr>
            <td>Global Mesh Size</td>
            <td><%= number_with_units(@beam,
                                      :meshsize) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% if @beam.completed? %>
  <div class="btn-group">
    <%= button(@beam, :results) %>
  </div>
<% end %>
<div class="btn-group">
  <% if @beam.ready? %>
    <%= button(@beam, :submit) %>
  <% else %>
    <%= button(@beam,  :clean) %>
  <% end %>
  <%= button(@beam, :edit) %>
  <%= button(@beam, :copy) %>
  <%= button(@beam, :delete) %>
</div>
